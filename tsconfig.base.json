      "@ngx-atlas-ui/components/demo-button": ["apps/demo/src/app/components/src/lib/demo-button/src/index.ts"],
      "@ngx-atlas-ui/components/overview": ["apps/demo/src/app/components/src/lib/overview/src/index.ts"],
      "@ngx-atlas-ui/shared/codd-and-preview": ["apps/demo/src/app/shared/code-and-preview/src/index.ts"]
